<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            style="@style/AppTheme.Toolbar"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="br.com.squarebits.bikestation.view.ui.MainActivity"
            android:layout_alignParentTop="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:id="@+id/nearby"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:weightSum="10"
            android:background="@drawable/dialog_background"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/toolbar"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#2e2e2e"
                    android:text="Máquina mais próxima a você:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#2e2e2e"
                    android:id="@+id/addressNearby"
                    android:maxLines="3"
                    android:text="Rua fulano de talfulano de talfulano de talfulano de talfulano de talfulano de talfulano de talfulano de tal"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:gravity="center"
                android:weightSum="10"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="4.8"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:textColor="#2e2e2e"
                    android:id="@+id/showNearby"
                    android:text="VER"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:layout_weight="4.8"
                    android:layout_marginTop="5dp"
                    android:textColor="#2e2e2e"
                    android:maxLines="3"
                    android:id="@+id/closeNearby"
                    android:text="FECHAR"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:id="@+id/bottomLayout"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:gravity="bottom"
            android:weightSum="10"
            android:background="@drawable/dialog_background"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="190dp"
                android:layout_weight="7"
                android:layout_marginLeft="25dp"
                android:src="@drawable/arrows_1_select_512"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="3"
                android:layout_marginRight="15dp"
                android:gravity="center|left"
                android:textColor="#252525"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="Selecione uma máquina para ver mais detalhes"
                />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
