<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/myblack</item>
        <item name="android:textColorSecondary">@color/myblack</item>
        <item name="colorControlActivated">#c6c6c6</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>

    <!--<style name="LoginBackground" parent="AppTheme">-->
        <!--<item name="android:windowBackground">@drawable/background</item>-->
    <!--</style>-->

    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="colorPrimary">#1e000000</item>
        <item name="colorPrimaryDark">#1e000000</item>
        <item name="colorControlHighlight">#1e000000</item>
        <item name="backgroundTint">#1e000000</item>
        <item name="colorAccent">#1e000000</item>
        <item name="colorControlNormal">#1e000000</item>
        <item name="colorControlActivated">#1e000000</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>




    <style name="MaterialSearch" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar">
        <item name="colorPrimary">@color/myblack</item>
        <item name="colorPrimaryDark">@color/myblack</item>
        <item name="colorAccent">@color/myblack</item>
        <item name="actionMenuTextColor">@color/myblack</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="myCheck">
        <item name="colorAccent">#00B2DD</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <!--<item name="android:textColorHint">#2056a5</item>-->
        <item name="android:textSize">12sp</item>
        <!--&lt;!&ndash; Label color in TRUE state and bar color FALSE and TRUE State &ndash;&gt;-->
        <item name="colorAccent">#2056a5</item>
        <item name="colorControlNormal">#2056a5</item>
        <item name="colorControlActivated">#2056a5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#87000000</item>
        <item name="colorControlHighlight">#2056a5</item>
        <item name="android:textColorHighlight">#2056a5</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">#ffcf0b</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabIndicatorHeight">4dp</item>

    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/start_desactive</item>
        <item name="colorControlActivated">@color/start_active</item>
    </style>



</resources>
